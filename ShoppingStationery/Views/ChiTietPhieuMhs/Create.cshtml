@model ShoppingStationery.Models.ChiTietPhieuMh

@{
    ViewData["Title"] = "Create";
}



<style>
    .row {
        /* Your styles for the row */
        display: flex; /* Use flexbox for layout */
        justify-content: center; /* Center the contents horizontally */
    }

    .col-md-4 {
        /* Your styles for the column */
        width: 33.333333%; /* Adjust width if needed */
        padding: 0 15px; /* Adjust padding as per your design */
    }

    .form-group {
        /* Your styles for form groups */
        margin-bottom: 15px; /* Adjust margin as per your design */
    }

    label {
        /* Your styles for labels */
        font-weight: bold; /* Adjust font-weight as per your design */
    }

    input[type="text"],
    select {
        /* Your styles for text inputs and select elements */
        width: 100%; /* Make inputs and selects fill the container */
        padding: 8px; /* Adjust padding as per your design */
        margin-top: 5px; /* Adjust margin as per your design */
        border: 1px solid #ccc; /* Adjust border as per your design */
        border-radius: 4px; /* Adjust border-radius as per your design */
        box-sizing: border-box; /* Ensure padding and border are included in the width */
    }

    input[type="submit"] {
        /* Your styles for submit button */
        background-color: #007bff; /* Button color */
        color: white; /* Button text color */
        padding: 10px 20px; /* Adjust padding as per your design */
        border: none; /* Remove border */
        border-radius: 4px; /* Adjust border-radius as per your design */
        cursor: pointer; /* Add cursor pointer on hover */
    }

        input[type="submit"]:hover {
            /* Your styles for submit button on hover */
            background-color: #0056b3; /* Button color on hover */
        }

    .form-main {
        a text-align: center;
    }
    /* Custom CSS for form styling */
    .form-main {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    /* Enhanced CSS for form title */
    .form-title {
        font-size: 32px;
        font-weight: bold;
        color: #333; /* Darker color for better contrast */
        margin-bottom: 30px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        border-bottom: 2px solid #007bff; /* Add a border bottom for emphasis */
        padding-bottom: 10px; /* Add some padding at the bottom */
        transition: color 0.3s ease; /* Smooth transition for color change */
    }

        /* Hover effect for form title */
        .form-title:hover {
            color: #007bff; /* Change color on hover */
        }

</style>

<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <div class="row g-3 mb-4 align-items-center justify-content-between">
            <div class="col-auto">
                <h2>Lập phiếu Mua Hàng</h2>
                <a asp-action="Index" asp-controller="PhieuMuaHangs">Quay lại</a> |
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2 class="form-title">Lập chi tiết phiếu mua hàng</h2>
            <form asp-action="Create" asp-controller="ChiTietPhieuMhs"asp-controller="ChiTietPhieuMhs" class="form-main">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MaPhieuMh" class="control-label"> Mã phiếu</label>
                    <input asp-for="MaPhieuMh" class="form-control" value="@ViewBag.phieuId"></input>
                </div>
                <div class="form-group">
                    <label asp-for="MaVpp" class="control-label"> Văn phòng phầm</label>
                    <select asp-for="MaVpp" class="form-control" asp-items="ViewBag.MaVpp"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label">Số lượng</label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="DonGia" class="control-label">Đơn giá</label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
