@model IEnumerable<ShoppingStationery.Models.ChiTietDeNghiSc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string searchTerm = TempData["SearchTerm"] as string;
}

<div class="mx-2 my-2">
    <h1 class="text-center mt-2">Chi tiết phiếu đề nghị sửa chữa</h1>

    <div class="d-flex justify-content-between">
        <form asp-action="TimKiemCTPhieuDNSC" method="post" class="app-search-form">
            <input type="hidden" name="idMaDnms" value="@TempData["idMaDnsc"]" />
            <input type="text" placeholder="Tìm kiếm..." name="searchTerm" class="form-control search-input" value="@searchTerm" />
            <button type="submit" class="btn search-btn btn-primary" value="Search"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
        <div>
            <a asp-action="Index" asp-controller="PhieuDeNghiScs" class="btn btn-secondary">Trở về danh sách</a>
            <a asp-action="Create" asp-route-idMaDnsc="@TempData["idMaDnsc"]" class="btn btn-primary text-white">Thêm mới</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Mã DNSC</th>
                        <th scope="col" class="text-center">Thiết bị</th>
                        <th scope="col" class="text-center">Đơn vị tính</th>
                        <th scope="col" class="text-center">Số lượng</th>
                        <th scope="col" class="text-center">Lý do mua sắm</th>
                        <th scope="col" class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center" class="text-center">@item.MaDnsc</td>
                            <td align="center" class="text-center">@item.MaTbNavigation.TenTb</td>
                            <td align="center" class="text-center">@item.Dvt</td>
                            <td align="center" class="text-center">@item.SoLuong</td>
                            <td align="center" class="text-center">@item.LyDo</td>
                            <td align="center" class="text-center">
                                <a class="btn btn-success text-white" asp-action="Edit" asp-route-maDnsc="@item.MaDnsc" asp-route-maTb="@item.MaTb">Sửa</a>
                                <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.MaDnsc">Chi tiết</a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.MaDnsc">Xoá</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        if (!string.IsNullOrEmpty(searchTerm))
        {
            <div>
                <a asp-action="Index" asp-route-idMaDnsc="@TempData["idMaDnsc"]" class="btn btn-secondary me-5 ml-2 float-start">Trở về danh sách</a>
            </div>

            <div style="text-align: center;"><p>Không tìm thấy kết quả phù hợp với từ khóa "@searchTerm".</p></div>
        }
        else
        {
            <div style="text-align: center;"><p>Hiện không có phiếu yêu cầu nào.</p></div>
        }
    }
</div>