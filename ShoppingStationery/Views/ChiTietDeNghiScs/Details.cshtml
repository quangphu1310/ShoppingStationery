@model ShoppingStationery.Models.ChiTietDeNghiSc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Thông tin về chi tiết phiếu đề nghị sửa chữa</h1>
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Edit" asp-route-maDnsc="@Model?.MaDnsc" asp-route-maTb="@Model?.MaTb" class="btn btn-primary text-white">Chỉnh sửa</a>
                <a asp-action="Index" asp-route-idMaDnsc="@Model?.MaDnsc" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Thiết bị             : @Html.DisplayFor(model => model.MaTbNavigation.TenTb)</label>
                            </div>
                            <div class="form-group">
                                <label>Đơn vị tính          : @Html.DisplayFor(model => model.Dvt)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Số lượng             : @Html.DisplayFor(model => model.SoLuong)</label>
                            </div>
                            <div class="form-group">
                                <label>Lý do sữa chữa       : @Html.DisplayFor(model => model.LyDo)</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>