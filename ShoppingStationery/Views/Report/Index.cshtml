
<div class="container">
    <div class="mx-2 my-2">
        <h1 class="text-center mt-2">Báo cáo</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Loại</th>
                    <th scope="col">Tổng giá trị</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td scope="row">Tổng chi phí mua sắm văn phòng phẩm</td>
                    <th scope="row">@ViewBag.sumCostMH</th>
                </tr>
                <tr>
                    <td scope="row">Tổng chi phí sửa chữa thiết bị văn phòng</td>
                    <th scope="row">@ViewBag.sumCostSC</th>
                </tr>
                <tr>
                    <td scope="row">Tổng chi phí</td>
                    <th scope="row">@ViewBag.sumCost</th>
                </tr>
            </tbody>
        </table>
        <form action="/Report/Index" method="post">
            <div class="row">
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Chọn loại</label>
                    <select class="form-select" name="loai">
                        <option value="0" selected>Tất cả</option>
                        <option value="1">Mua sắm văn phòng phẩm</option>
                        <option value="2">Sửa chữa thiết bị văn phòng</option>

                    </select>
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Đơn vị sử dụng</label>
                    <select class="form-select" name="donVi">
                        <option selected>Chọn đơn vị</option>
                        @foreach (var item in ViewBag.listDV)
                        {
                            <option value="@item.MaDv">@item.TenD</option>
                        })
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Từ ngày</label>
                    <input type="date" name="dateStart" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Đến ngày</label>
                    <input type="date" name="dateEnd" class="form-control" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-info">Lọc</button>
                </div>
            </div>
        </form>


        
