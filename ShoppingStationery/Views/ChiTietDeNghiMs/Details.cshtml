@model ShoppingStationery.Models.ChiTietDeNghiM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Thông tin về chi tiết phiếu đề nghị mua sắm</h1>
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Edit" asp-route-maDnms="@Model?.MaDnms" asp-route-maVpp="@Model?.MaVpp" class="btn btn-primary text-white">Chỉnh sửa</a>
                <a asp-action="Index" asp-route-idMaDnms="@Model?.MaDnms" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Văn phòng phẩm       : @Html.DisplayFor(model => model.MaVppNavigation.TenVpp)</label>
                            </div>
                            <div class="form-group">
                                <label>Đơn vị tính          : @Html.DisplayFor(model => model.Dvt)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Số lượng             : @Html.DisplayFor(model => model.SoLuong)</label>
                            </div>
                            <div class="form-group">
                                <label>Lý do mua sắm        : @Html.DisplayFor(model => model.Lydo)</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
